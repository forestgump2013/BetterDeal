<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/subItemView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/bonusImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="4dp"
            android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/slotBonusImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_toRightOf="@+id/bonusImageView"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/bonusContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lines="1"
        android:text="多彩趣味花颜墙贴强力无痕挂钩"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/bonusPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bonusContent"
        android:textColor="@android:color/black"
        android:layout_marginTop="6dp"
        android:text="价值:¥35.00" />

    <TextView
        android:id="@+id/bonusObtainWay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_alignBaseline="@+id/bonusPrice"
        android:textColor="@android:color/black"
        android:text="领取方式:快递送达" />
    </RelativeLayout>

</LinearLayout>