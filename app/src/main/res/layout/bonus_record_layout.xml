<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >

    <RelativeLayout
        android:id="@+id/topView"
        android:layout_width="match_parent"
        android:layout_height="40dp" >

        <TextView
            android:id="@+id/mallTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/mallMark"
            android:textColor="#2d2d2d"
            android:layout_marginLeft="8dp"
            android:layout_centerVertical="true"
            android:text="TextView" />

        <ImageView
            android:id="@+id/mallMark"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="4dp"
            android:src="@mipmap/tianmao_c_mark" />

        <TextView
            android:id="@+id/bonusDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dp"
            android:textColor="#2d2d2d"
            android:text="TextView" />

        <TextView
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:text="" 
            android:background="#CCCCCC"/>
        
    </RelativeLayout>

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/bonus_record_background"
        android:layout_below="@+id/topView"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/bonusTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/bonusImageView"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@+id/bonusImageView"
        android:ellipsize="end"
        android:lines="2"
        android:textSize="16sp"
        android:text="多彩趣味花颜墙贴强力无痕挂钩 "
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/priceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/bonusImageView"
        android:layout_alignBottom="@+id/bonusImageView"
        android:textSize="16sp"
        android:layout_marginBottom="4dp"
        android:textColor="@android:color/white"
        android:text="价值 : ¥" />

    <TextView
        android:id="@+id/bonusPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textColor="@android:color/white"
        android:layout_toRightOf="@+id/priceText"
        android:layout_alignBottom="@+id/priceText"
        android:text="" />

    <TextView
        android:id="@+id/bonusPriceFloat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" />

    <ImageView
        android:id="@+id/bonusImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/background"
        android:scaleType="fitXY" />

    <Button
        android:id="@+id/bonusDetailBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/background"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="14dp"
        android:layout_marginRight="20dp"
        android:background="@mipmap/bonus_record_detail"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/bonusReason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        android:layout_alignBottom="@+id/bonusPrice"
        android:textColor="#2d2d2d"
        android:textSize="16sp"
        android:text="TextView" />

    <TextView
        android:id="@+id/grayLine"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#CCCCCC"
        android:layout_alignParentBottom="true"
        android:text="" />

</RelativeLayout>
