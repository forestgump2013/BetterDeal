<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafafa"
    tools:context="com.way.betterdeal.fragments.AboutFragment">


    <RelativeLayout
        android:id="@+id/titleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fafafa" >
        <TextView
            android:id="@+id/titleText"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="#404040"
            android:text="关于剁手联盟" />

        <Button
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:background="#00000000"
            android:textSize="16sp"
            android:textColor="#404040"
            android:text="返回" />

    </RelativeLayout>

    <TextView
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#CCCCCC"
        android:layout_below="@+id/titleView"
        android:text="" />

    <!-- TODO: Update blank fragment layout -->
    <com.way.betterdeal.view.CircleImageView
        android:id="@+id/appIcon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/titleView"
        android:src="@mipmap/app_icon"
        app:civ_border_color="#ffdef2"
        app:civ_border_width="2dp" />

    <TextView
        android:text="什么值得买"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appIcon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:textColor="#404040"
        android:textSize="18sp"
        android:textStyle="bold"
        android:id="@+id/text1" />

    <TextView
        android:text="duoshouclub.com"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/text1"
        android:layout_marginTop="6dp"
        android:textColor="#404040"
        android:textSize="16sp"
        android:id="@+id/textView33" />

    <TextView
        android:text="一个让你轻松开心的福利与导购平台"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView33"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:textColor="#404040"
        android:textSize="16sp"
        android:id="@+id/text2" />
    <TextView
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#a0a0a0"
        android:layout_below="@+id/text2"
        android:layout_alignLeft="@+id/text2"
        android:layout_alignRight="@+id/text2"
        android:layout_marginTop="4dp"
        android:text="" />

    <TextView
        android:text="Copyright@2012-2016"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:textColor="#404040"
        android:textSize="16sp"
        android:id="@+id/textView30" />

    <TextView
        android:text="官方微信 DUOSHOUCLUB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView30"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="6dp"
        android:textColor="#404040"
        android:textSize="16sp"
        android:id="@+id/textView31" />

    <TextView
        android:text="官方微博 @剁手联盟"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView31"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="6dp"
        android:textColor="#404040"
        android:textSize="16sp"
        android:id="@+id/textView32" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp">

        <TextView
            android:text="检查更新"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/centerline"
            android:layout_marginRight="18dp"
            android:textColor="#4880bb"
            android:textSize="16sp"
            android:id="@+id/textView36" />

        <TextView
            android:text="Ver:1.0.0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/centerline"
            android:layout_marginRight="18dp"
            android:textColor="#404040"
            android:textSize="16sp"
            android:id="@+id/textView35" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:visibility="invisible"
            android:id="@+id/centerline" />


    </RelativeLayout>


</RelativeLayout>
