<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
   
    >

    <TextView
        android:id="@+id/statusbar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/ds_routine_color"
        android:text="" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp" >

        <ImageView
            android:id="@+id/indexImage1"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:padding="4dp"
            android:scaleType="fitXY"
            android:src="@mipmap/selected_point" />

        <ImageView
            android:id="@+id/indexImage2"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:padding="4dp"
            android:scaleType="fitXY"
            android:src="@mipmap/unselected_point" />

        <ImageView
            android:id="@+id/indexImage3"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:padding="4dp"
            android:scaleType="fitXY"
            android:src="@mipmap/unselected_point" />

        <ImageView
            android:id="@+id/indexImage4"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:padding="4dp"
            android:scaleType="fitXY"
            android:visibility="gone"
            android:src="@mipmap/unselected_point" />
    </LinearLayout>

    <Button
        android:id="@+id/jumpBtn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="24dp"
        android:layout_marginTop="32dp"
        android:textColor="@android:color/white"
        android:background="@drawable/oval_dark_gray"
        android:text="跳过" />

</RelativeLayout>