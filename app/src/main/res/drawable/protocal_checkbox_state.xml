<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item  android:state_checked="false">
        <layer-list >
            <item android:left="1dp"
                android:top="1dp"
                android:bottom="1dp"
                android:right="1dp">
                <shape  android:shape="oval">
                    <solid android:color="#cccccc"
                        ></solid>
                </shape>
            </item>
            <item  android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp"
                android:drawable="@mipmap/checked_mark">
            </item>
        </layer-list>
    </item>
    
    <item  android:state_checked="true">
        <layer-list >
            <item android:left="1dp"
                android:top="1dp"
                android:bottom="1dp"
                android:right="1dp">
                <shape android:shape="oval" >
                    <solid android:color="@color/ds_routine_color"
                        ></solid>
                </shape>
            </item>
            
            <item  android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp"
                android:drawable="@mipmap/checked_mark">
            </item>
        </layer-list>
    </item>

</selector>
